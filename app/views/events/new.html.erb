<h2>Create new event</h2>

<%= form_for @event do |f| %>
    <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
    </div>

  <div class="field">
    <%= f.label :disc %><br />
    <%= f.text_area :disc, autofocus: true %>
  </div>
   <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, autofocus: true %>
  </div>
   <div class="field">
    <%= f.label :start_at %><br />
    <%= f.date_select :start_at, autofocus: true %>
  </div>
   <div class="field">
    <%= f.label :end_at %><br />
    <%= f.date_select :end_at, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit "Create New Event" %>
  </div>
<% end %>

