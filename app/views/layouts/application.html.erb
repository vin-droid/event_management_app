								<li><%= link_to "Sign Up" ,user_session_path%></li>
					<% end %>
							</ul>
						</div><!-- /.navbar-collapse -->
					</div><!-- /.container-fluid -->
				</nav>
				<div class="container">
					<div class="error-flash"><%= notice%></div>
					<%= yield %>
				</div>
			</body>
			</html>
            