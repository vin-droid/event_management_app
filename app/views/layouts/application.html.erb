          <ul class="dropdown-menu" role="menu">
            <li><a href="/friends/requests/sent">sent requests</a></li>
            <li><a href="/friends/requests/recieved">recivece requests</a></li>
        </ul>
        </li>
					<li><%=link_to"Find Friends", find_friends_path(current_user) %></li>


					<% end %>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<% if current_user %>
